<!DOCTYPE html>
<html>
<head>
	<title>Edit</title>
</head>
<body>
	<form method="post">
		<fieldset>
			<legend>Edit product</legend>
			<table>
                <tr>
                    <td>Title</td>
                    <td><input type="text" name="title" value="<%= title %>"></td>
                </tr>
				<tr>
					<td>Description</td>
					<td><input type="text" name="description" value="<%= description %>"></td>
                </tr>
            
				<tr>
					<td>Size</td>
                        <td><select name="size">
                            <% var options = ['S','M','L','XL']; %>
                          <% for(var i = 0; i< options.length; i++) { %>
                                <% if(size === options[i]){ %>
                                   <option value="<%= options[i] %>" selected="selected"><%= options[i] %></option>
                                <% } else{ %>
                                    <option value="<%= options[i] %>"><%= options[i] %></option>
                                <% } %>
                                 <% } %>
                        </select></td>
                </tr>
                <tr>
                        <td></td>
                        <td></td>
                </tr>
                <tr>
                    <td>Category</td>
                    <td><select name="category">
                         <% var options = ['Male','Female']; %>
                          <% for(var i = 0; i< options.length; i++) { %>
                                <% if(category === options[i]){ %>
                                   <option value="<%= options[i] %>" selected="selected"><%= options[i] %></option>
                                <% } else{ %>
                                    <option value="<%= options[i] %>"><%= options[i] %></option>
                                <% } %>
                                 <% } %></select></td>
                        
                </tr>
                <tr>
                    <td>Type: <%= type %></td>
                    <td><select name="type">
                         <% var options = ['Shirt','Pant','Salwar','Jeans']; %>
                          <% for(var i = 0; i< options.length; i++) { %>
                                <% if(type === options[i]){ %>
                                   <option value="<%= options[i] %>" selected="selected"><%= options[i] %></option>
                                <% } else{ %>
                                    <option value="<%= options[i] %>"><%= options[i] %></option>
                                <% } %>
                                 <% } %></select></td>
                </tr>
            
				<tr>
					<td></td>
					<td><input type="submit" name="submit" value="Update">|| <a href="/ahome">Back</a></td>
				</tr>
			</table>
		</fieldset>
	</form>
</body>
</html>