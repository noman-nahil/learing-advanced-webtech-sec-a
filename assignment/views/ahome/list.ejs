<!DOCTYPE html>
<html>
<head>
	<title>Product List</title>
</head>
<body>
	<h1> Product List</h1>

	<br>
	<a href="/ahome">Back</a> ||  <a href="/logout">Log out</a> 

	<table border="1">
		<tr>
            <td>Serial</td>
			<td>Username</td>
			<td>Id</td>
			<td>Title</td>
			<td>Category</td>
			<td>Quantity</td>
            <td>Amount</td>
		</tr>
		
		

		<% users.forEach( function(product,i){ %>
			
			<tr>
				<td><%= product.serial %></td>
				<td><%= product.username %></td>
				<td><%= product.id %></td>
				<td><%= product.title %></td>
				<td><%= product.category %></td>
                <td><%= product.quantity %></td>
                <td><%= product.totalAmount	%></td>
                <td><a href="/ahome/orderconfirm/<%= product.serial%> ">Confirm</a></td>
                <td><a href="/ahome/delete/<%= product.serial%> ">Delete</a></td>
				
				
	
			</tr>

		<%
			}); 
		%>

	</table>
	<a href="/ahome">Back</a> || <a href="/logout">Log out</a></a>

</body>
