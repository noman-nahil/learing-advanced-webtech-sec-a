<!DOCTYPE html>
<html>
<head>
	<title>Product List</title>
</head>
<body>
	<h1> Product List</h1>

	<br>
	<a href="/ahome">Back</a> || <a href="/logout">Log out</a> || <a href="/product/add">Add New Product</a>

	<table border="1">
		<tr>
			<td>Id</td>
			<td>Title</td>
			<td>Description</td>
			<td>Image</td>
            <td>Size</td>
            <td>Category</td>
			<td>Type</td>
			<td>Price</td>
		</tr>
		
		

		<% users.forEach( function(product){ %>
			
			<tr>
				<td><%= product.id %></td>
				<td><%= product.title %></td>
				<td><%= product.description %></td>
				<td><img src="../../assets/images/<%= product.image %>"></td>
                <td><%= product.size %></td>
                <td><%= product.category %></td>
				<td><%= product.type %></td>
				<td><%= product.price %></td>
				<td>
				<a href="/product/edit?pid=<%= product.id %>">Edit</a>
				<a href="/product/delete?pid=<%= product.id %>">Delete</a>	
				</td>
			</tr>

		<%
			}); 
		%>

	</table>
	<a href="/ahome">Back</a> || <a href="/logout">Log out</a> || <a href="product/add">Add New Product</a>

</body>
</html>